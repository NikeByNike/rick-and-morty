{
  "name": "rick-and-morty",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/user-event": "^7.2.1",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.29",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/styled-components": "^5.0.1",
    "apollo-boost": "^0.4.7",
    "apollo-cache-inmemory": "^1.6.5",
    "graphql": "^14.6.0",
    "react": "^16.13.0",
    "react-dom": "^16.13.0",
    "react-scripts": "3.4.0",
    "styled-components": "^5.0.1",
    "typescript": "^3.7.5"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "prettier": "^1.19.1"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "tests": "CI=true react-scripts test",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "lint": "prettier --write './src/**/*.{js,jsx,ts,tsx}' && git add .",
    "all-tests": "npm run ts-check && npm run lint && npm run tests",
    "deploy": "npm run all-tests && npm run build && firebase deploy --only hosting"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run all-tests"
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
